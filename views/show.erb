<div class="container">

  <div class="col-md-8 col-md-offset-2">
    <div>
      <a href="/contacts" style="font-size:20px;"> << Contact list</a>
    </div>
    <br>

    
    <label><%= @contact[:category]!= "" ? "change category" : "Add a category"%></label>

    <div>
      <div style="float:left">
        <form action="/contacts/<%= @contact[:id]%>/add_category" method="get" >
          <div id="parent"  >
            <select name="category" onchange="submit();">
              <%if @categories != []%>
                <option>please choose one category</option>
              <%else%>
                <option>please create a category first</option>
              <%end%>
              <%@categories.each do |category|%>
                <option value="<%=category%>" ><%=category%></option>
              <%end%>
            </select>
          </div>
          <a  href="/categories/new?from=detail&url=<%=request.url %>">New category</a>
        </form>
      </div>
      <div style="float:right">
        <form action="/contacts/<%=@contact[:id]%>/delete" method="post" >
          <button class="btn btn-danger" >Delete</button>
        </form>
      </div>
    </div>
      


    <br>
    <div class="clearfix contact-detail">
      <ul class="list-group">
        <li class="list-group-item">
          name: <%= @contact[:name]%>
        </li>
        <li class="list-group-item">
          phone: <%= @contact[:phone]%>
        </li>
        <li class="list-group-item">
          email: <%= @contact[:email]%>
        </li>
        <li class="list-group-item">
          category: <%= @contact[:category] %>
        </li>
      </ul>
    </div>
    
  </div>
</div>
